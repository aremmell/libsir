{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "process",
            "command": "make",
            "args": [
                "clean"
            ],
            "detail": "Delete all intermediate files and previously compiled binaries",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "windows": {}
        },
        {
            "label": "Static library",
            "type": "process",
            "command": "make",
            "args": [
                "static"
            ],
            "detail": "Compiles libsir as a static library.",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": "Clean",
            "windows": {}
        },
        {
            "label": "Static library (debug)",
            "type": "process",
            "command": "make",
            "args": [
                "SIR_DEBUG=1",
                "static"
            ],
            "detail": "Compiles libsir as a static library with debug symbols.",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": "Clean",
            "windows": {}
        },
        {
            "label": "Shared library",
            "type": "process",
            "command": "make",
            "args": [
                "shared"
            ],
            "detail": "Compiles libsir as a shared library.",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": "Clean",
            "windows": {}
        },
        {
            "label": "Test suite",
            "type": "process",
            "command": "make",
            "args": [
                "tests"
            ],
            "detail": "Compiles a test suite binary to ensure libsir is functioning properly.",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Static library",
            "windows": {}
        },
        {
            "label": "Test suite (debug)",
            "type": "process",
            "command": "make",
            "args": [
                "SIR_DEBUG=1",
                "tests"
            ],
            "detail": "Compiles a test suite binary with debug symbols to ensure libsir is functioning properly.",
            "group": {
                "kind": "build"
            },
            "dependsOn": "Static library (debug)",
            "windows": {},
            "problemMatcher": []
        },
        {
            "label": "Example C application",
            "type": "process",
            "command": "make",
            "args": [
                "example"
            ],
            "detail": "Compiles a sample C application demonstrating basic usage of libsir.",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": "Static library",
            "windows": {}
        }
    ]
}
