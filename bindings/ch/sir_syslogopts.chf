#include "chsir.h"

bool
sir_syslogopts(sir_options opts) {
    void* fptr;
    bool  retval;

    fptr = dlsym(_Chsir_handle, "sir_syslogopts_chdl");
    if (fptr == NULL) {
        (void)fprintf(_stderr, "Error: %s(%d): dlsym(): %s\n",
                      __func__, __LINE__, dlerror());

        return false;
    }

    (void)dlrunfun(fptr, &retval, sir_syslogopts, opts);

    return retval;
}
